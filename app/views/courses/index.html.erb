<h1>All your courses</h1>

<ul id="allcourses">
  <% @courses.each do |type| %>
    <div class="grey">
      <li>Subject: <%= link_to(type.subject, type) %></li>
    </div>
  <% end %>
</ul>
<% if current_user.subscription.plan_id.present? && current_user.subscription.plan_id >= 2 %>
    <%= link_to "Create a new course", new_course_path %></br>
  <% else %>
    <%= link_to 'Upgrade to create a course', koudoku.owner_subscriptions_path(current_user) %>
<% end %>
